{% extends 'admin/manifest/index.jinja' %}

{% block container %}
  <div>
    
    <ul class="nav nav-tabs" role="tablist">
      <li class="active" role="presentation"><a href="#attr" aria-controls="attr" role="tab" data-toggle="tab">명세 속성</a></li>
    </ul>
    
    <div class="tab-content">
      <div id="attr" class="tab-pane active" role="tabpanel">
        <div class="list-group" style="margin-top:10px;">
          {% for attr in manifest.r_attribute %}
            <div class="list-group-item">
              <h4 class="list-group-item-heading">{{ attr.key }}</h4>
              <p class="list-group-item-text">{{ attr.val }}</p>
            </div>
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock container %}
